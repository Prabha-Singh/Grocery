/* Newsletter PopUp */
{%- if settings.newsletter_bg_img and settings.newsletter_style_handle == 'newsletter_style_1' -%}
.newsletter_popup_inner{
  background: url("{{ settings.newsletter_bg_img | img_url: '1024x1024' }}") no-repeat scroll center center / cover;
    }
{%- endif -%}
.subscribe_area > h2, .subscribe-content > h2 {
  color: {{ settings.popup_newsletter_title_color }};
}
.subscribe_area > p, .subscribe-content > p {
  color: {{ settings.popup_newsletter_description_color }};
}
.grid__item h1{
  color: {{ settings.section_title_color }};
}
.subscribe-form-input {
  border: 1px solid {{ settings.input_field_color }};
  color: {{ settings.input_field_color }};
}
.subscribe-form-input::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: {{ settings.input_field_color }} !important;
}
.subscribe-form-input::-moz-placeholder { /* Firefox 19+ */
  color: {{ settings.input_field_color }} !important;
}
.subscribe-form-input:-ms-input-placeholder { /* IE 10+ */
  color: {{ settings.input_field_color }} !important;
}
.subscribe-form-input:placeholder { /* Firefox 18- */
  color: {{ settings.input_field_color }} !important;
}
.newsletter-btn {
  background: {{ settings.newsletter_button_bg_color }} none repeat scroll 0 0;
  color: {{ settings.newsletter_button_color }};
}
.newsletter-btn:hover{
  background: {{ settings.newsletter_button_hover_bg_color }} none repeat scroll 0 0;
  color: {{ settings.newsletter_button_hover_color }};
}
.popup_off{
  color: {{ settings.close_icon_color }};
}
.newsletter_popup_inner:before {
  background: {{ settings.newsletter_overlay_color }};
  opacity: {{ settings.newsletter_overlay_opacicty }};
}
.form-group.subscribe-form-group p {
  color: {{ settings.dont_show_title_color }};
}
.overlay-bg::before {
  background: {{ settings.breadcrumb_banner_overlay_color }} none repeat scroll 0 0;
  opacity: {{ settings.breadcrumb_banner_opacity }};
}
.breadcrumbs-title {
  color: {{ settings.breadcurmb_title_color }};
}
.breadcrumb-list > li > a {
  color: {{ settings.breadcurmb_page_title_color }};
}
.breadcrumb-list > li::before {
  color: {{ settings.breadcurmb_page_title_color }};
}
.breadcrumb-list > li {
  color: {{ settings.active_breadcurmb_page_title_color }};
}




/* Top Bar Noticfication */
{% if settings.notification_bg_image %}
.top-notification-bar {
  background: url("{{ settings.notification_bg_image | img_url: 'master' }}") no-repeat scroll center center / cover;
    }
{% else %}
.top-notification-bar {
  background: {{ settings.topbar_color_1 }};
  background: -moz-linear-gradient(left, {{ settings.topbar_color_1 }} 0%, {{ settings.topbar_color_2 }} 100%);
  background: -webkit-gradient(left top, right top, color-stop(0%, {{ settings.topbar_color_1 }}), color-stop(100%, {{ settings.topbar_color_2 }}));
  background: -webkit-linear-gradient(left, {{ settings.topbar_color_1 }} 0%, {{ settings.topbar_color_2 }} 100%);
  background: -o-linear-gradient(left, {{ settings.topbar_color_1 }} 0%, {{ settings.topbar_color_2 }} 100%);
  background: -ms-linear-gradient(left, {{ settings.topbar_color_1 }} 0%, {{ settings.topbar_color_2 }} 100%);
  background: linear-gradient(to right, {{ settings.topbar_color_1 }} 0%, {{ settings.topbar_color_2 }} 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{ settings.topbar_color_1 }}', endColorstr='{{ settings.topbar_color_2 }}', GradientType=1 );
    }
{% endif %}
.notification-entry p a.notification-button {
  background-color: {{ settings.notificaction_button_bg_color }};
  border: 1px solid {{ settings.notificaction_button_border_color }};
  color: {{ settings.notificaction_button_color }};
}
.notification-entry p a.notification-button:hover {
  background-color: {{ settings.notificaction_button_hover_bg_color }};
  border: 1px solid {{ settings.notificaction_button_hover_border_color }};
  color: {{ settings.notificaction_button_hover_color }};
}
.notification-close-btn {
  background-color: {{ settings.notificaction_close_button_bg_color }};
  border: 1px solid {{ settings.notificaction_close_button_border_color }};
  color: {{ settings.notificaction_close_button_color }};
}
.notification-close-btn:hover{
  background-color: {{ settings.notificaction_close_button_hover_bg_color }};
  border: 1px solid {{ settings.notificaction_close_button_hover_border_color }};
  color: {{ settings.notificaction_close_button_hover_color }};
}
{% if settings.notification_button_name == '' %}
.notification-close-btn {
  margin-top: 0px;
}
{% endif %}
.notification-entry p {
  color: {{ settings.notification_text_color }};
}
.top-notification-bar::before {
  background: {{ settings.notification_overlay_color | color_modify: 'alpha', settings.notification_overlay_opacity }};
}
/* Typography */
{%- if settings.typography_enable -%}
{% assign body_font = settings.body_font_handle %}
{% assign header_font = settings.header_font_handle %}
{% assign paragraph_font = settings.paragraph_font_handle %}

{{ body_font | font_face }}
{{ header_font | font_face }}
{{ paragraph_font | font_face }}

html, body, input, textarea, button, select{
  font-family: {{ body_font.family }}, {{ body_font.fallback_families }};
  font-weight: {{ body_font.weight }};
  font-style: {{ body_font.style }};
}
h1, h2, h3, h4, h5, h6{
  font-family: {{ header_font.family }}, {{ header_font.fallback_families }};
  font-weight: {{ header_font.weight }};
  font-style: {{ header_font.style }};
}
p{
  font-family: {{ paragraph_font.family }}, {{ paragraph_font.fallback_families }};
  font-weight: {{ paragraph_font.weight }};
  font-style: {{ paragraph_font.style }};
}
{%- endif -%}

{%- if settings.font_size_enable -%}
h1{
  font-size: {{ settings.h1_font_size }}px;
}
h2{
  font-size: {{ settings.h2_font_size }}px;
}
h3{
  font-size: {{ settings.h3_font_size }}px;
}
h4{
  font-size: {{ settings.h4_font_size }}px;
}
h5{
  font-size: {{ settings.h5_font_size }}px;
}
h6{
  font-size: {{ settings.h6_font_size }}px;
}
p{
  font-size: {{ settings.p_font_size }}px;
}

@media (max-width: 767px) {
  h1{
    font-size: {{ settings.h1_mobile_font_size }}px;
  }
  h2{
    font-size: {{ settings.h2_mobile_font_size }}px;
  }
  h3{
    font-size: {{ settings.h3_mobile_font_size }}px;
  }
  h4{
    font-size: {{ settings.h4_mobile_font_size }}px;
  }
  h5{
    font-size: {{ settings.h5_mobile_font_size }}px;
  }
  h6{
    font-size: {{ settings.h6_mobile_font_size }}px;
  }
  p{
    font-size: {{ settings.p_mobile_font_size }}px;
  }
}



{%- endif -%}

/* End Typography */
