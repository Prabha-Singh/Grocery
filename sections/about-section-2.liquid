{% if section.settings.about_us_enable_area %}

<div id="section-{{ section.id }}" class="welcome_lukani_store">
  <div class="container{% if section.settings.full_width %}-fluid{% endif %}">
    <div class="welcome_lukani_container">
      <div class="row">
        {% if section.settings.about_img_hide %}
        <div class="col-lg-5 col-md-5">
          <div class="welcome_lukani_thumb">
            <img src=" {% if section.settings.banner_img %} {{ section.settings.banner_img | img_url: '325x438' }}  {% else %}  https://via.placeholder.com/325x438 {% endif %}" alt="{{ section.settings.banner_img.alt }}">
          </div>
        </div>
        {% endif %}
        <div class="col-lg-7 col-md-7">
          <div class="welcome_lukani_content">
            <div class="welcome_lukani_header">
              {% if section.settings.about_title_sub %}
              <h3>{{ section.settings.about_title_sub }}</h3>
              {% endif %}

              {% if section.settings.about_title %}
              <h2>{{ section.settings.about_title }}</h2>
              {% endif %}

            </div>
            {% if section.settings.about_content %}
            <div class="welcome_lukani_desc">
              <p>{{ section.settings.about_content }}</p>
            </div>
            {% endif %}
            <div class="welcome_lukani_footer">
              {% if section.settings.about_sign_hide %}
              <img src=" {% if section.settings.sing_img %} {{ section.settings.sing_img | img_url: 'large' }}  {% else %}  https://via.placeholder.com/228x129 {% endif %}" alt="{{ section.settings.sing_img.alt }}">
              {% endif %}
              {% if section.settings.author_name %}
              <p><span>{{ section.settings.author_name }}</span> â€“ {{ section.settings.author_deg }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}



