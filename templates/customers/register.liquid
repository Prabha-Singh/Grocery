<div class="customer-page theme-default-margin">
  <div class="container">
    <div class="row">
      <div class="offset-xl-1 col-xl-10">
        <div class="register-form login-form clearfix">

            <div class="login-text">
              <h2>{{ 'customer.register.title' | t }}</h2>
              {% if settings.register_sub_text != '' %}
              <p>{{ settings.register_sub_text }}</p>
              {% endif %}
              
              <p>{{ settings.have_account }} <a href="/account/login">{{ 'customer.login.sign_in' | t }}</a></p>
              
            </div>
            <div class="register-form">
              {% form 'create_customer' %}

              {{ form.errors | default_errors }}
              
            <div class="form-group row">
              <label for="FirstName" class="col-lg-3 col-md-3 col-form-label">{{ 'customer.register.first_name' | t }}</label>
              <div class="col-lg-6 col-md-6">
                <input type="text" name="customer[first_name]" id="FirstName" class="form-control" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
              </div>
            </div>              
              
            <div class="form-group row">
              <label for="LastName" class="col-lg-3 col-md-3 col-form-label">{{ 'customer.register.last_name' | t }}</label>
              <div class="col-lg-6 col-md-6">
                <input type="text" name="customer[last_name]" id="LastName" class="form-control" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">
              </div>
            </div>          
              
            <div class="form-group row">
              <label for="Email" class="col-lg-3 col-md-3 col-form-label">{{ 'customer.register.email' | t }}</label>
              <div class="col-lg-6 col-md-6">
                <input type="email" name="customer[email]" id="Email" class="form-control {% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'customer.register.email' | t }}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
              </div>
            </div>              

            <div class="form-group row">
              <label for="CreatePassword" class="col-lg-3 col-md-3 col-form-label">{{ 'customer.register.password' | t }}</label>
              <div class="col-lg-6 col-md-6">
                <input type="password" name="customer[password]" id="CreatePassword" class="form-control{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.register.password' | t }}">
              </div>
            </div>

            <div class="register-box mt-40 text-center">
              <button type="submit" class="login-btn">{{ 'customer.register.submit' | t }}</button>
            </div>              

              {% endform %}
              
              <div class="account-optional-action text-center">
              	<a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
              </div>

            </div>

        </div>
      </div>
    </div>
  </div>
</div>
