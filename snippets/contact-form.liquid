{% form 'contact' %}

{% if form.posted_successfully? %}
<p class="note form-success">{{ 'contact.form.post_success' | t }}</p>
{% endif %}
{{ form.errors | default_errors }}

<form >
  <div class="row">
    <div class="col">
      <input type="text" placeholder="{{ section.settings.name_placeholder }}" class="{% if form.errors contains 'name' %}error{% endif %} form-control" name="contact[name]" id="ContactFormName" value="{% if form.name %}{{ form.name }}{% elsif customer.name %}{{ customer.name }}{% endif %}">
    </div>
    <div class="col">
      <input type="email" placeholder="{{ section.settings.email_placeholder }}" class="{% if form.errors contains 'email' %}error{% endif %} form-control" name="contact[email]" id="ContactFormEmail" value="{% if form.email %}{{ form.email }}{% elsif customer.email %}{{ customer.email }}{% endif %}">
    </div>
  </div>
  <div class="row">
    <div class="col">
      <input type="text" id="ContactFormSubject" class="form-control" name="contact[subject]" placeholder="{{ section.settings.subject_placeholder }}" value="{{ form.subject }}">
    </div>
  </div>
  <div class="row">
    <div class="col">
    <textarea placeholder="{{ section.settings.message_placeholder }}" class="custom-textarea" name="contact[body]" id="ContactFormMessage">{% if form.body %}{{ form.body }}{% endif %}</textarea>
    </div>
  </div>
  <div class="contact-submit">
     <button type="submit" class="button">{{ section.settings.form_button_name }}</button>
  </div>
</form>
{% endform %}